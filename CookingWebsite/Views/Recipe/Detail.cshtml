

<div class="content"  ng-controller="RecipeController" id="content_recettes_details">
    <section class="section">
        <div class="row">
            <div class="col-xs-4">
                <img 	width="263" class="recette_img" src="{{UrlRecipePicture}}" alt="{{Name}}">
            </div>
            <div class="col-xs-8">
                <h1 class="rec_name">{{Name}}</h1>
                <p class="rec_note">
                    <star-rating rating-value="{{AverageRate}}" readonly="isReadonly"></star-rating>
                    <span class="notes">| {{AverageRate}}/5 - {{RecipeRates.length}} votes</span>
                </p>
                <div class="ingredients_list">
                    <p class="list-title">Ingrédients</p>
                    <ul class="list">
                        <li class="item" ng-repeat="i in Ingredients">
                            <img class="item-img" width="50%" src="{{i.UrlIngredientPicture}}" alt="{{i.Name}}">
                            <p class="item-name" title="{{i.Name}}">{{i.Name}}</p>
                        </li>
                    </ul>
                </div>
                <p class="rec_cal">Valeur calorique <span class="for">(100g)</span> : <span class="val">{{calories}} kcal</span></p>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="overline-title"><span class="text">Préparation</span></h2>
            </div>
            <div class="col-xs-12">
                <p ng-bind-html="trustPreparation"></p>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="overline-title"><span class="text">Commentaires</span></h2>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="panel">
                    <div class="filters">
                        <h3 class="panel_title">Donnez-nous votre avis !</h3>

                        <div class="filter">
                            <p><label for="">Notez cette recette</label></p>
                            <p>
                                <div star-rating rating-value="{{rateValue}}" ng-Model="rateValue" ></div>
                            </p>
                        </div>
                        <div class="filter">
                            <p><label for="">Le titre de votre commentaire</label></p>
                            <p><input type="text" ng-model="Title" placeholder="ex: Amazingue !" required></p>
                        </div>
                        <div class="filter">
                            <p><label for="">Votre commentaire</label></p>
                            <textarea name="" id="" ng-model="Comment" class="wide" placeholder="ex: Franchement cette NgRecette, c’est de la bombe. Le genre de saveurs qui t’éveillent les papilles, t’as vu ! Woula, j’ai kiffé" required></textarea>
                        </div>
                        <div class="ar">
                            <input ng-show="IsConnected" ng-click="saveRate()" class="btn btn_color1" value="Poster !">
                            <span ng-show="!IsConnected">Log in First</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <ul class="comments" ng-init="limit = 3">
                    <li class="comment" ng-repeat="rt in RecipeRates">
                        <p class="name">{{rt.Title}}<span class="note">{{rt.Rate}}/5</span></p>
                        <p class="by">par <a href="communaute_details.html">{{rt.User.Login}}</a></p>
                        <p class="text">{{rt.Comment}}</p>
                    </li>
                </ul>
                <div class="row showmore">
                    <div class="col-xs-12">
                        <button type="button" ng-hide="results.length === items.length"
                                ng-click="limit = limit +2" class="btn btn_color1" class="btn btn_grey">
                            <span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section">
        <h2 class="title">~ Vous aimerez aussi... ~</h2>
        <div class="recettes row">
            <div class="col-xs-6 col-sm-3 recette" ng-repeat="rr in RelatedRecipes">
                <a href="../Detail/{{rr.IdRecipe}}">
                    <img src="{{rr.UrlRecipePicture}}" alt="{{rr.Name}}">
                    <div class="top" title="note : {{r.AverageRate}}/5">


                        <span class="note">
                            <star-rating rating-value="{{rr.AverageRate}}" readonly="isReadonly"></star-rating>
                        </span>
                    </div>
                    <div class="bot">
                        <p class="name">{{rr.Name}}</p>
                    </div>
                </a>
            </div>
        </div>
    </section>

</div>

