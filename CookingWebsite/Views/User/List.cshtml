
@{
    ViewBag.Title = "Communauté";
}

<div  class="content" id="content_users" ng-app="MyApp" ng-controller="UserController">
    <h1 class="page-title">La communauté</h1>

    <section class="section">
        <h2 class="title">~ Les meilleures cuistots ~</h2>
        <div class="sort">
            <p>
                <span class="span-label">Trier par :</span>

                <select ng-model="SelectedOrder" ng-options="UserFilterOption.Value as UserFilterOption.Description for UserFilterOption in UserFilterOptions"></select>
            </p>
        </div>
        <div class="users row" id="dv-container" ng-init="limit = 4" >
            <div class="col-xs-6 col-sm-3 user" ng-repeat="u in Users | orderBy:SelectedOrder | limitTo: limit as results">
                <a href="./Detail/{{u.IdUser}}">
                        <img src="{{u.UrlProfilPicture}}" alt="{{u.Login}}">
                            <star-rating rating-value="{{u.AverageRate}}" readonly="isReadonly"></star-rating>
                        <div class="text">
                            <p class="name">{{u.Login}}</p>

                            <p class="level">
                                <span class="status">Expert</span>
                            </p>
                        </div>

                    </a>
            </div>
        </div>
        <div class="row showmore">
            <div class="col-xs-12">
                <button type="button" ng-hide="results.length === items.length" 
                    ng-click="limit = limit +4" class="btn btn_color1"><span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage</button>
            </div>
        </div>
    </section>
</div>
